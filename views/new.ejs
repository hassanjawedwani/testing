<% layout("./layout/boilerplate") -%>
<div class="container row">
  <div class="col-lg-8" style="position: relative">
    <h1 class="my-3">Create a new Listing</h1>
    <form
      id="create-listing-form"
      method="post"
      action="http://localhost:8080/listings"
      class="create-list-form needs-validation"
      enctype="multipart/form-data"
      novalidate
    >
      <div>
        <label class="form-label" for="title"> Title </label>
        <input
          type="text"
          name="title"
          class="form-control"
          id="title"
          placeholder="Add a catchy title"
          required
        />
        <div class="valid-feedback">good</div>
        <div class="invalid-feedback">Please enter a eye catching title</div>
      </div>
      <div>
        <label class="form-label" for="description"> Description </label>
        <textarea
          name="description"
          class="form-control"
          id="description"
          required
        ></textarea>
        <div class="valid-feedback">good</div>
        <div class="invalid-feedback">
          Please enter a description that describes your listing
        </div>
      </div>

      <div>
        <label class="form-label" for="image"> Upload Image </label>
        <input type="file" name="image" class="form-control" id="image" />
        <div class="valid-feedback">good</div>
        <div class="invalid-feedback">
          Please select a image for your listing
        </div>
      </div>

      <div>
        <label class="form-label" for="price"> Price</label>
        <input
          type="number"
          name="price"
          placeholder="Enter price "
          class="form-control"
          id="price"
          required
        />
        <div class="valid-feedback">good</div>
        <div class="invalid-feedback">Please enter price for your listing</div>
      </div>

      <div>
        <label class="form-label" for="location"> Location</label>
        <input
          type="text"
          name="location"
          placeholder="Enter location"
          class="form-control"
          id="location"
          required
        />
        <div class="valid-feedback">good</div>
        <div class="invalid-feedback">Please enter location address</div>
      </div>

      <div>
        <label class="form-label" for="country"> Country </label>
        <input
          type="text"
          name="country"
          placeholder="Enter country"
          class="form-control"
          id="country"
          required
        />
        <div class="valid-feedback">good</div>
        <div class="invalid-feedback">Please enter country name</div>
      </div>
      <button type="submit" class="btn custom-btn my-3">Create new list</button>
    </form>
    
  </div>
  <script>
    document
      .getElementById("create-listing-form")
      .addEventListener("submit", function () {
        document.getElementById("create-listing-loader").style.display = "flex";
      });
  </script>
</div>
